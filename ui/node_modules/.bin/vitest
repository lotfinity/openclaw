#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/lofa/DEV-msi/openclaw/node_modules/.pnpm/vitest@4.0.18_@opentelemetry+api@1.9.0_@types+node@25.2.3_@vitest+browser-playwright@4._870379715d8d48817803b8fa6e8c8089/node_modules/vitest/node_modules:/home/lofa/DEV-msi/openclaw/node_modules/.pnpm/vitest@4.0.18_@opentelemetry+api@1.9.0_@types+node@25.2.3_@vitest+browser-playwright@4._870379715d8d48817803b8fa6e8c8089/node_modules:/home/lofa/DEV-msi/openclaw/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/lofa/DEV-msi/openclaw/node_modules/.pnpm/vitest@4.0.18_@opentelemetry+api@1.9.0_@types+node@25.2.3_@vitest+browser-playwright@4._870379715d8d48817803b8fa6e8c8089/node_modules/vitest/node_modules:/home/lofa/DEV-msi/openclaw/node_modules/.pnpm/vitest@4.0.18_@opentelemetry+api@1.9.0_@types+node@25.2.3_@vitest+browser-playwright@4._870379715d8d48817803b8fa6e8c8089/node_modules:/home/lofa/DEV-msi/openclaw/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../vitest/vitest.mjs" "$@"
else
  exec node  "$basedir/../vitest/vitest.mjs" "$@"
fi
